doctype html
html
  head
    title= title
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.mb-4 Create or Update Pet

      form(action="/update-cobj" method="POST")
        .mb-3
          label.form-label(for="id") Pet Id (keep empty to create a new object)
          input.form-control(type="text", name="id", placeholder="Introduce Id if you want to update an existing one")
        
        .mb-3
          label.form-label(for="name") Pet Name
          input.form-control(type="text", name="name", required)

        .mb-3
          label.form-label(for="chipnumber") Chip Number
          input.form-control(type="text", name="chipnumber")

        .mb-3
          label.form-label(for="breed") Breed
          input.form-control(type="text", name="breed")

        button.btn.btn-success(type="submit") Submit

      hr
      a.btn.btn-link(href="/") 



